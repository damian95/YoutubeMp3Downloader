@model List<YoutubeMp3Downloader.Models.YoutubeVid>

<div class="row">

    @foreach (var vid in Model)
    {
        <div id="dataListItem" class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    <a href="@String.Concat("https://www.youtube.com/watch?v=", @vid.url.Remove(0, 9))'" target="_blank"><img id=@vid.id src=@vid.imgLink width="100" height="75" /></a>
                    
                </dt>
                <dd style="padding-top:15px; padding-left:10px">
                    <input type="button" onclick="x(@vid.id, '@vid.url.Remove(0, 9)')" value="Download" class="btn btn-danger" />
                </dd>
                <dl>
                    <dt>
                        <p>Title: </p>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => vid.title)
                    </dd>
                    <dt>
                        <p>Uploader:</p>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => vid.uploader)
                    </dd>
                    <dt>
                        <p>Duration:</p>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => vid.duration)
                    </dd>
                </dl>
            </dl>
        </div>
    }

</div>





